# Environment Configuration
ENVIRONMENT=development

# Server Configuration
# For local development:
PUBLIC_IP=localhost
FRONTEND_URL=http://localhost:3000

# When using Tailscale (recommended for remote access):
# PUBLIC_IP=100.64.x.x  # Your Tailscale IP (run 'tailscale ip -4' to find it)
# FRONTEND_URL=http://100.64.x.x:3000

PROCESSING_SERVICE_URL=http://processing:8001

# Database Configuration
DB_USER=jaces_user
DB_PASSWORD=jaces_password
DB_NAME=jaces
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# MinIO Configuration
MINIO_ENDPOINT=http://minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_USE_SSL=false

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here!

# Service Ports
WEB_PORT=3000
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
REDIS_PORT=6379
PROCESSING_PORT=8001
POSTGRES_PORT=5432

################################################
