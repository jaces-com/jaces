# Environment Configuration
ENVIRONMENT=development

# Server Configuration
PUBLIC_IP=localhost
FRONTEND_URL=http://localhost:3000
PROCESSING_SERVICE_URL=http://processing:8001

# Database Configuration
DB_USER=jaces_user
DB_PASSWORD=jaces_password
DB_NAME=jaces
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# MinIO Configuration
MINIO_ENDPOINT=http://minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_USE_SSL=false

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=https://auth.jaces.com/google/callback

# Notion OAuth Configuration
NOTION_CLIENT_ID=your-notion-client-id-here
NOTION_CLIENT_SECRET=your-notion-client-secret-here
NOTION_REDIRECT_URI=https://auth.jaces.com/notion/callback

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here!

# Service Ports
WEB_PORT=3000
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
REDIS_PORT=6379
PROCESSING_PORT=8001
POSTGRES_PORT=5432

################################################
#                                              #
#           iOS & macOS App Configuration      #
#                                              #
################################################

# Apple Development
# Your Apple Developer Team ID (found in Xcode or Apple Developer portal)
APPLE_DEVELOPMENT_TEAM=YOUR_TEAM_ID_HERE

# iOS App Configuration
IOS_DEFAULT_API_ENDPOINT=http://localhost:3000
IOS_DEVICE_TOKEN_PREFIX=dev_tk_

# macOS App Configuration
MACOS_DEFAULT_SERVER_URL=http://localhost:3000
MACOS_DEFAULT_SYNC_INTERVAL=60
MACOS_DEFAULT_BATCH_SIZE=100
MACOS_DEFAULT_MAX_RETRIES=5